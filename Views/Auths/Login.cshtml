@model LMSAPI.DTO.UserLogin
@{
    ViewBag.Title = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3>Login</h3>
                </div>
                <div class="card-body">
                    <form action="/Auths/Login" method="post">
                        <div class="form-group mb-4">
                            <label asp-for="Username" class="fs-5"><i class="fas fa-user"></i> Username</label>
                            <input asp-for="Username" class="form-control form-control-lg"
                                placeholder="Enter your username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Password" class="fs-5"><i class="fas fa-lock"></i> Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"
                                placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Login
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">Don't have an account?
                        <a asp-controller="Auths" asp-action="Register" class="text-primary fw-bold">
                            Register Now
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
@* Login Styling *@
    .card {
        border-radius: 15px;
        box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background: linear-gradient(135deg, #007bff, #0056b3);
        color: white;
        font-weight: bold;
    }

    .card-body {
        background-color: #f8f9fa;
        border-radius: 0 0 15px 15px;
    }

    .card-footer {
        background-color: #f8f9fa;
        border-radius: 0 0 15px 15px;
    }

    .form-control {
        height: 50px;
        font-size: 1.1rem;
        border-radius: 10px;
    }

    .form-control-lg {
        padding: 15px;
    }

    button {
        font-size: 1.2rem;
        padding: 12px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }
    button:hover {
        background-color: #0056b3;
        box-shadow: 0 4px 12px rgba(0, 86, 179, 0.3);
        transform: translateY(-3px);
    }
    a.text-primary {
        text-decoration: none;
        font-weight: bold;
    }

 
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
