@{
    ViewData["Title"] = "Welcome to Our Library";
    var backgroundImage =
    Url.Content("https://images.pexels.com/photos/2908984/pexels-photo-2908984.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1");
}

<div class="container background my-5 text-center">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="display-4 mb-4">Welcome to Our Library</h1>
            <p class="lead mb-5">Discover, Learn, and Grow with Our Extensive Collection</p>
        </div>
    </div>

    <div class="row g-4 pb-5 row row">
        <div class="col d-flex flex-column align-items-center text-center">
            <div class="icon-circle mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-book"
                    viewBox="0 0 16 16">
                    <path
                        d="M1 2.828c.885-.37 2.154-.769 3.388-.893 1.33-.134 2.458.063 3.112.752v9.746c-.935-.53-2.12-.603-3.213-.493-1.18.12-2.37.461-3.287.811V2.828zm7.5-.141c.654-.689 1.782-.886 3.112-.752 1.234.124 2.503.523 3.388.893v9.923c-.918-.35-2.107-.692-3.287-.81-1.094-.111-2.278-.039-3.213.492V2.687zM8 1.783C7.015.936 5.587.81 4.287.94c-1.514.153-3.042.672-3.994 1.105A.5.5 0 0 0 0 2.5v11a.5.5 0 0 0 .707.455c.882-.4 2.303-.881 3.68-1.02 1.409-.142 2.59.087 3.223.877a.5.5 0 0 0 .78 0c.633-.79 1.814-1.019 3.222-.877 1.378.139 2.8.62 3.681 1.02A.5.5 0 0 0 16 13.5v-11a.5.5 0 0 0-.293-.455c-.952-.433-2.48-.952-3.994-1.105C10.413.809 8.985.936 8 1.783z" />
                </svg>
            </div>
            <h3 class="fs-2">Extensive Collection</h3>
        </div>
       
        <div class="col d-flex flex-column align-items-center text-center">
            <div class="icon-circle mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor"
                    class="bi bi-person" viewBox="0 0 16 16">
                    <path
                        d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                </svg>
            </div>
            <h3 class="fs-2">User-Friendly</h3>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            <a href="@Url.Action("Index", "Book")" class="btn btn-explore">Explore Our Collection</a>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
    $(document).ready(function () {
        $(".icon-circle").hover(
            function () {
                $(this).stop().animate({
                    width: "4rem",
                    height: "4rem",
                    boxShadow: "0px 0px 15px rgba(255, 255, 0, 0.8)"
                }, 300);
            },
            function () {
                $(this).stop().animate({
                    width: "3rem",
                    height: "3rem",
                    boxShadow: "none"
                }, 300);
            }
        );
    });
</script>
<style>
    body {
        background-image: url('@backgroundImage');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
    }

    .background {
        backdrop-filter: blur(10px);
        background: linear-gradient(135deg, #0707074f, #fafcfac2);
        border-radius: 19px;
        padding: 20px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.3);
        color: white;
    }

    .icon-circle {
        width: 4rem;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.2);
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-explore {
        background: linear-gradient(135deg, #ff6600, #ff3300);
        color: #fff;
        font-size: 1.5rem;
        font-weight: bold;
        border-radius: 50px;
        padding: 15px 40px;
        text-transform: uppercase;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(255, 102, 0, 0.4);
        border: none;
    }

    .btn-explore:hover,
    .btn-explore:focus {
        background: linear-gradient(135deg, #ff3300, #cc2900);
        box-shadow: 0 8px 16px rgba(255, 102, 0, 0.6);
        transform: translateY(-4px);
        text-decoration: none;
    }

    .btn-explore:active {
        background: #cc2900;
        box-shadow: 0 4px 8px rgba(255, 102, 0, 0.4);
        transform: translateY(2px);
    }
</style>
